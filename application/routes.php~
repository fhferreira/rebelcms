<?php

return array(

	'GET /' => function()
	{
	  $view = View::of_site_layout();
	  $view->content = View::make('site.home');
	  return $view;
	},

	'GET /(:any?)' => function($slug=NULL)
	{
	  $page = Page::where('slug','=',$slug)->first();

	  $media = Page::find($page->id)->media;
	  
	  $view = View::of_site_layout();
	  $view->content = View::make('site.page')
		->with('media',$media)
		->with('page',$page);
	  return $view;
	},

);